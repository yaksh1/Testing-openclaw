{
  "manifest_version": 3,
  "name": "SyncSpace",
  "version": "0.1.0",
  "description": "Shared browsing presence for couples and friends. Feel together, even when apart.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/error-handler.js",
        "content/theme-manager.js",
        "content/presence-glow.js",
        "content/nudge-handler.js",
        "content/focus-timer.js",
        "content/typing-indicator.js",
        "content/playlist.js",
        "content/custom-nudges.js",
        "content/settings.js"
      ],
      "css": ["content/presence-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://cdn.socket.io; object-src 'self'"
  }
}
